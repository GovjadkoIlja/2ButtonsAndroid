<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundColor">

    <FrameLayout
        android:id="@+id/createQuestionSettingsFrameHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/createQuestionSettingsFrameExample"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createQuestionSettingsFrameHeader"/>

    <FrameLayout
        android:id="@+id/createQuestionSettingsFrameSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createQuestionSettingsFrameExample"
        android:layout_above="@id/createQuestionSettingsFrameFurther"/>

    <FrameLayout
        android:id="@+id/createQuestionSettingsFrameFurther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>

