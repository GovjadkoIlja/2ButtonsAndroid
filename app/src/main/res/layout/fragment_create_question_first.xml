<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorLightBlue">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/create_border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/create_border">

            <TextView
                android:id="@+id/tvCreateQuestionHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlue"/>

            <TextView
                android:id="@+id/tvCreateQuestionSymbols"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAgeSex"/>

        </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/etCreateQuestionTextOld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/createQuestionMarginBetweenBoxes"
        android:textColor="@color/colorNotAnsweredOptionText"/>

</LinearLayout>
