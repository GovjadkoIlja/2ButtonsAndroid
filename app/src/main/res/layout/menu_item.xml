<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llMainMenyItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlMenuItem"
        android:text=""
        android:background="@color/colorWhite"
        android:textAllCaps="false"
        android:paddingVertical="@dimen/votersMenuItemPaddingsVertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvMenuItemText"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/menuLineHeight"
        android:orientation="horizontal"
        android:id="@+id/llUnderlineMenuItem"
        android:background="@color/colorWhite" />

</LinearLayout>