<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:paddingLeft="@dimen/questionHeaderPaddingLeft"
    android:paddingRight="@dimen/questionHeaderPaddingRight">

    <ImageButton
        android:id="@+id/ibQuestionPhoto"
        android:layout_width="@dimen/questionPhotoSize"
        android:layout_height="@dimen/questionPhotoSize"
        android:src="@drawable/my_square_photo"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:layout_marginTop="@dimen/questionHeaderPhotoMarginTop"
        android:layout_marginRight="@dimen/questionHeaderMarginAfterPhoto"/>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/ibQuestionPhoto">

        <TextView
            android:id="@+id/tvQuestionAsker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/questionAskerLoginFontSize"/>

        <TextView
            android:id="@+id/tvQuestionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/questionQuestionTypeFontSize"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <ImageButton
            android:id="@+id/ibQuestionLike"
            android:layout_width="@dimen/questionHeaderIconsSize"
            android:layout_height="@dimen/questionHeaderIconsSize"
            android:src="@drawable/thumb_up"
            android:scaleType="fitXY"
            android:padding="0dp"
            android:background="@color/colorWhite"/>

        <TextView
            android:id="@+id/tvQuestionRaiting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/questionQuestionRaitingFontSize"
            android:layout_marginRight="@dimen/questionHeaderRaitingMargins"
            android:layout_marginLeft="@dimen/questionHeaderRaitingMargins"/>

        <ImageButton
            android:id="@+id/ibQuestionDislike"
            android:layout_width="@dimen/questionHeaderIconsSize"
            android:layout_height="@dimen/questionHeaderIconsSize"
            android:src="@drawable/thumb_down"
            android:scaleType="fitXY"
            android:padding="0dp"
            android:background="@color/colorWhite"
            android:layout_marginRight="@dimen/questionHeaderMarginAfterRaitingSection"/>

        <ImageButton
            android:id="@+id/ibQuestionFavorite"
            android:layout_width="@dimen/questionHeaderIconsSize"
            android:layout_height="@dimen/questionHeaderIconsSize"
            android:src="@drawable/star"
            android:scaleType="fitXY"
            android:padding="0dp"
            android:background="@color/colorWhite"
            android:layout_marginRight="@dimen/questionHeaderMarginBetweenIcons"/>

        <ImageButton
            android:id="@+id/ibQuestionOptions"
            android:layout_width="@dimen/questionHeaderIconsSize"
            android:layout_height="@dimen/questionHeaderIconsSize"
            android:src="@drawable/more"
            android:scaleType="fitXY"
            android:background="@color/colorWhite" />

    </LinearLayout>

</RelativeLayout>
