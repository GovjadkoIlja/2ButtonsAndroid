<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:id="@+id/activityUserLayout">

    <FrameLayout
        android:id="@+id/userFrameHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marginAfterRegisterHeader"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/userPhotoSize"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/userFrameUserPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/userUserInfoMargin"/>

        <FrameLayout
            android:id="@+id/userFrameUserButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/userFrameUserInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/userUserInfoMargin"
        android:layout_marginRight="@dimen/userUserInfoMargin" />

    <FrameLayout
        android:id="@+id/userFrameMenuFour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/userFramePosts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/userFrameFooter"
            android:background="@color/backgroundColor"/>

        <FrameLayout
            android:id="@+id/userFrameFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</LinearLayout>
